#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        long long int a,b;
        cin>>a>>b;
        if(a==0)
        {
            cout<<1<<endl;
        }
        else {
            long long int ans=a+2*b+1;
            cout<<ans<<endl;
        }
    }
}
