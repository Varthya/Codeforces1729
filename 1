#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        int n;
        cin>>n;
        int count_zero=0;
        int count_neg=0;
        for(int i=0; i<n; i++)
        {
            int x;
            cin>>x;
            if(x==0)
                count_zero++;
            if(x<0)
                count_neg++;
        }
        if(count_neg%2!=0)
            count_zero+=2;
            
        cout<<count_zero<<endl;

    }
}
