#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        int n;
        cin>>n;
        vector<long long int>arr(n,0);
        for(int i=0; i<n; i++)
        {
          long long   int x;
            cin>>x;
            arr[i]=x;
        }
        sort(arr.begin(),arr.end());
       long long  int ma=LONG_MIN;
        for(int i=0; i<n-1; i+=2)
        {
            ma=max(ma,arr[i+1]-arr[i]);
        }
        cout<<ma<<endl;

    }
}