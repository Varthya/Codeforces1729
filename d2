#include<bits/stdc++.h>
using namespace std;
int gcd(long long int r,long long int l)
{
    if(l==0)
        return r;
    return gcd(l,r%l);

}
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        long long int l,r;
        cin>>l>>r;
        long long int diff=r-l;
        if(l==1&&r==1)
        {
            diff++;
        }
        cout<<diff<<endl;

    }
}